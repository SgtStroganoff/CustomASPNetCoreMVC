@page
@using Microsoft.Extensions.Options;
@model LoginModel

@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-12">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" type="text" class="form-control form-control-sm rounded-pill" id="floatingInput" aria-required="true" placeholder=".form-control-sm" />
                    <label asp-for="Input.Email" for="floatingInput"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" type="text" class="form-control form-control-sm rounded-pill" id="floatingPassword" aria-required="true" placeholder=".form-control-sm" />
                    <label asp-for="Input.Password" for="floatingPassword"></label>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <hr />
                <div align="center">
                    <button id="login-submit" type="submit" class="btn btn-outline-success btn-sm rounded-pill">Log in</button>
                </div>
                &nbsp;
                <div class="form-group">
                    <p>
                        <label>Trouble Login In?</label>
                        <a id="forgot-password" asp-page="./ForgotPassword">Reset!</a>
                    </p>
                    <p>
                        <label>Don't have an account?</label>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register!</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <partial name="_ValidationScriptsPartial" />
}
